<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<BorderPane stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="sample.Controller">
    <center>
        <ImageView fx:id="currentFrame" fitHeight="480" fitWidth="640" preserveRatio="true"/>
    </center>

    <left>
        <VBox>
            <Label text="Sensor 1:" fx:id="sensor1Label"/>
            <Label  text="Sensor 2:" fx:id="sensor2Label"/>
            <Label text="Sensor 3:" fx:id="sensor3Label"/>
        </VBox>
    </left>

    <bottom>
        <HBox alignment="CENTER" spacing="10" >
            <Button text="Connect" fx:id="button" mnemonicParsing="false" onAction="#startCamera"/>
        </HBox>
    </bottom>
</BorderPane>
